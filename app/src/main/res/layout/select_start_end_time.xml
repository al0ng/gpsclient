<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/moji_background_gray"
    android:id="@+id/start_time_layot_all"
    tools:context="com.mj.gpsclient.Activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/start_time_layot"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="80dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:text="开始时间"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/edit"
            android:id="@+id/start_time_text_view"
            android:layout_marginLeft="20dp"
            android:text="点击选择"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="80dp"
        android:layout_below="@id/start_time_layot"
        android:id="@+id/start_end_line"
        android:layout_gravity="center_vertical"
        android:background="@color/moji_game_text_green"
      />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="80dp"
        android:id="@+id/end_time_layot"
        android:layout_below="@id/start_end_line"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:text="结束时间"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit"
            android:textSize="16sp"
            android:gravity="center"
            android:id="@+id/end_time_text_view"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"

            android:text="点击选择"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:id="@+id/start_end_time_ok_layot"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:id="@+id/ok_text_view"
            android:background="#EA6E09"
            android:text="确定"
        />
    </RelativeLayout>


</RelativeLayout>
