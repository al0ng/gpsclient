<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popviewbg"
    android:orientation="vertical"
    android:padding="8dp" >

    <TextView
        android:id="@+id/device_detail_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="left|center_vertical"
        android:text="终端名称 15195713490"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/device_detail_OnTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="left|center_vertical"
        android:text="在线时间 2015-05-30 20:46:46"
        android:textColor="#000000"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/device_detail_Speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="left|center_vertical"
            android:text="速度 0.00"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/device_detail_Direction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="方向 正北"
            android:layout_marginLeft="50dip"
            android:gravity="right"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/device_detail_BaseInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="left|center_vertical"
        android:text="基站信息"
        android:textColor="#000000"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/device_detail_LocType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="left|center_vertical"
            android:text="定位类型  GPS"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/device_detail_DeviceStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="left|center_vertical"
            android:paddingBottom="10dp"
            android:text="设备状态 充电完成状态"
            android:layout_marginLeft="50dip"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>