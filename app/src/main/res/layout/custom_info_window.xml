<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/singlepos_mainmapbk"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="7"
            android:gravity="bottom"
            android:text="标题"
            android:textSize="12dp"
           />

        <ImageButton
            android:id="@+id/hind_ib"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/singlepos_mainmapclose"
            android:scaleType="fitXY" >
        </ImageButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/info_lo_tv"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="经度"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/info_la_tv"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="纬度"
            android:textSize="12sp"
           />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/spf_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/info_speed_tv"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="速度"
            android:textSize="12sp"
           />

        <TextView
            android:id="@+id/info_fangxiang_tv"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="方向"
            android:textSize="12sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/info_weixinbiao_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/info_jizhan_tv"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="基站号"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/info_shanqu_tv"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="扇区号"
                android:textSize="12sp"
                />
        </LinearLayout>

     
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="邻近基站"
            android:textSize="12sp"
           />
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="基站号"
                android:textSize="12sp"
                 />

            <TextView
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="扇区号"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="信号强度"
                android:textSize="12sp"
                />
        </LinearLayout>
        

        <com.scout.mode.NoScrollListview
            android:id="@+id/listViewNeibor_lv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:divider="@null"
             />
    </LinearLayout>

    <TextView
        android:id="@+id/info_time_tv"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:text="时间"
        android:textSize="12sp"
    />

    <TextView
        android:id="@+id/info_position_tv"
        android:layout_width="240dp"
        android:layout_height="15dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:gravity="center|left"
        android:longClickable="true"
        android:singleLine="true"
        android:text="位置"
        android:textSize="12sp"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:text="按住位置描述信息区域3秒可自动放大查看"
        android:textSize="12sp"
         />

</LinearLayout>